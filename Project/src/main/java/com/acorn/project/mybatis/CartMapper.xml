<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cart">
	<!-- 장바구니에 담기 -->
	<insert id="insert" parameterType="cartDto">
		insert into cart
		(cart_id, id, productId, amount, price)
		values
		(seq_cart.nextval, #{id}, #{productId}, #{amount}, #{price})
	</insert>
	<select id="cartList" parameterType="cartDto" resultType="cartDto">
      SELECT imagePath, productName, amount, price
      FROM product P, cart C
      WHERE id=#{id}
   	</select>
   	 <!-- 장바구니 개별 상품 삭제 -->
   <delete id="delete" parameterType="cartDto">
      DELETE FROM cart
      WHERE cart_id=#{cart_id }
   </delete>
   
   <!-- 장바구니 비우기 -->
   <delete id="deleteAll" parameterType="cartDto">
      DELETE FROM cart
      WHERE id=#{id }
   </delete>
</mapper>